                <div class="create-post">
                    <div class="row">
                        <div class="col-md-7 col-sm-7">
                            <div class="form-group">
                                <img src="{{ asset('front/images/users/user-1.jpg') }}" alt="" class="profile-photo-md">
                                {{ form_start(form) }}
