                            {% else %}
                                <img src="data:image/png;base64,{{ pub.image }}" alt="post-image" class="img-responsive post-image" />
                            {% endif %}
                    <div class="post-container">
                        <img src="{{ asset('front/images/users/user-5.jpg') }}" alt="user" class="profile-photo-md pull-left" />
                        <div class="post-detail">
